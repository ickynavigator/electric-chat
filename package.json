{
  "name": "electric-chat",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "backend:start": "ts-node ./electric/docker/startCompose.ts",
    "backend:stop": "docker compose --env-file ./electric/docker/compose/.envrc -f ./electric/docker/compose/docker-compose.yaml stop",
    "backend:up": "yarn backend:start --detach",
    "backend:down": "docker compose --env-file ./electric/docker/compose/.envrc -f ./electric/docker/compose/docker-compose.yaml down --volumes",
    "client:generate": "yarn electric:check && npx electric-sql generate --service http://localhost:5133 --proxy postgresql://prisma:proxy_password@localhost:65432/electric",
    "client:watch": "yarn client:generate --watch",
    "db:migrate": "ts-node ./electric/db/migrate.ts",
    "db:psql": "ts-node ./electric/db/connect.ts",
    "electric:start": "ts-node ./electric/docker/startElectric.ts",
    "electric:check": "ts-node ./electric/check-electric-is-running.ts",
    "build": "ts-node ./electric/copy-wasm-files.ts && ts-node ./electric/builder.ts",
    "build-prod": "cross-env NODE_ENV=production yarn run build",
    "start": "yarn electric:check && cross-env SERVE=true yarn run build"
  },
  "devDependencies": {
    "@databases/pg-migrations": "^5.0.2",
    "@electric-sql/prisma-generator": "^1.1.2",
    "@prisma/client": "^5.7.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.5.2",
    "@types/prompt": "^1.1.8",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/shelljs": "^0.8.15",
    "@types/tcp-port-used": "^1.0.4",
    "cross-env": "^7.0.3",
    "esbuild": "^0.16.17",
    "esbuild-plugin-inline-image": "^0.0.9",
    "eslint": "^8.56.0",
    "fs-extra": "^11.2.0",
    "prisma": "^5.7.1",
    "prompt": "^1.3.0",
    "shelljs": "^0.8.5",
    "tcp-port-used": "^1.0.2",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@t3-oss/env-core": "^0.7.1",
    "electric-sql": "^0.8.2",
    "nodemon": "^3.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-node": "^10.9.2",
    "wa-sqlite": "rhashimoto/wa-sqlite#semver:^0.9.8",
    "zod": "^3.22.4"
  }
}
